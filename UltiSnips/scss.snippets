snippet mget "Pobranie wartosci z mapy o wielu poziomach zagniezdzeniach" b
@function mget($map, $keys...) {
    @each $key in $keys {
        $map: map-get($map, $key)
    }

    @return $map;
}
$0
endsnippet

snippet z-index "Organizowanie wartoÅ›ci z-index"
// https://jonsuh.com/blog/organizing-z-index-with-sass/
// usage:
/*
.selector {
  @include z-index(popper);
}
*/
$z-index: (
    popper : 200,
);

@function z-index($key) {
    @return map-get($z-index, $key);
}

@mixin z-index($key) {
    z-index: z-index($key);
}
$0
endsnippet

