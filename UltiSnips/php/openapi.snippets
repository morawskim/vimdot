@OA\Response(
*     response=${1:200},
*     description="${2:description}",
*     @OA\JsonContent(
*         ${3:type="array", @OA\Items(ref=@Model(type=EntityOrFormType::class))}
*     )
* )
$0
endsnippet

snippet oarp "OpenAPI Request Parameter"
@OA\Parameter(
*     name="${1:id}",
*     description="${2:description}",
*     required=${3:true},
*     in="${4:path}",
*     @OA\Schema(
*         type="${5:integer}"
*     )
* )
$0
endsnippet

snippet oarb "OpenAPI RequestBody"
