$0
endsnippet

snippet oaref "OpenAPI reference to schema"
ref="#/components/schemas/${1:SchemaName}"
$0
endsnippet

snippet oaschema "OpenAPI Schema"
@OA\Schema(
*     title="${1:title}"
*     ${2:@OA\Property(
*        property="type",
*        type="string"
*     ),
*     @OA\Property(
*        property="data",
*        type="string"
*     )},
*     example=${3:{"type": "auth", "data": "ASD45SDF4GFDGDFGVMNY"}}
* )
$0
endsnippet

